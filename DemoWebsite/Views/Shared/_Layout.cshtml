@using Caps.Web.Mvc;
@using Caps.Web.Mvc.SiteMap;
@using Caps.Data.Localization;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Caps Demo Website", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    @foreach (var node in SiteMap.RootNode.ChildNodes.Cast<CapsSiteMapNode>().Where(n => n.IsNodeTypeIn("Page", "Draft")))
                    {
                        <li class="menu-item @(node.IsOrContainsCurrentNode() ? "current" : "")"><a href="@node.Url" class="menu-link">@node.Title</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container page-host">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pircher Software</p>

            <div class="pull-right">
                <p class="langswitch">
                    @{
                        var otherLanguages = Caps.Data.Localization.Language.SupportedLanguages.Where(l => !String.Equals(l, Caps.Data.Localization.Language.CurrentLanguage, StringComparison.OrdinalIgnoreCase));
                        var numLanguages = otherLanguages.Count();
                        var i = 0;
                    }
                    @foreach (String language in otherLanguages)
                    {
                        i++;
                        <span><a href="@Url.LocalizeAction(language)">@Caps.Data.Localization.Language.SwitchStatement(language)</a></span>if (i < numLanguages - 1)
                        {<text>, </text>}
                    }
                </p>
            </div>

        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>